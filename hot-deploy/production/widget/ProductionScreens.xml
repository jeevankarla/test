    <screen name="productionStockXfers">
    	<section>
		     <actions>
		     	<set field="headerItem" value="Xfer"/>
		     	<set field="tabButtonItem1" value="productionStockXfers"/>
		     	<set field="tabButtonItem2" value="productionStockXfers"/>
