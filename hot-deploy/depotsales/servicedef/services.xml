<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>DepotSales Services</description>
    <vendor></vendor>
    <version>1.0</version>

   <service name="approveDepotOrder" engine="java" 
        location="in.vasista.vbiz.depotsales.DepotSalesServices" invoke="approveDepotOrder">
        <description>Approve Depot Orders</description>
        <attribute name="orderId" type="String" mode="IN" optional="false"/>
        <attribute name="salesChannelEnumId" type="String" mode="INOUT" optional="true"/>
        <attribute name="partyId" type="String" mode="IN" optional="false"/>
    </service>
    <service name="createCustomPaymentFromPreference" engine="java"
           location="in.vasista.vbiz.depotsales.DepotSalesServices" invoke="createCustomPaymentFromPreference">
       <description>Creates a payment using the order payment preference</description>
       <attribute name="orderPaymentPreferenceId" type="String" mode="IN" optional="false"/>
       <attribute name="paymentFromId" type="String" mode="IN" optional="true"/>
       <attribute name="paymentRefNum" type="String" mode="IN" optional="true"/>
       <attribute name="comments" type="String" mode="IN" optional="true"/>
       <attribute name="amount" type="String" mode="IN" optional="true"/>
       <attribute name="eventDate" type="Timestamp" mode="IN" optional="true"/>
       <attribute name="paymentId" type="String" mode="OUT" optional="false"/>
    </service>
    <service name="createDepotSalesReturnHeader" engine="java" location="in.vasista.vbiz.depotsales.DepotSalesServices" invoke="createDepotSalesReturnHeader" >
        <description>Create a new Depot Sales ReturnHeader</description>
        <attribute name="returnHeaderTypeId" type="String" mode="IN" optional="false"/>
        <attribute name="detailReturnsList" mode="IN" type="List" optional="false"/>
        <attribute name="fromPartyId" type="String" mode="IN" optional="false"/>
        <attribute name="productStoreId" type="String" mode="IN" optional="false"/>
        <attribute name="effectiveDate" type="Timestamp" mode="IN" optional="true"/>
        <attribute name="needsInventoryReceive" mode="IN" type="String" optional="true"/>
        <attribute name="userLogin" type="GenericValue" mode="IN" optional="true"/>
        <attribute name="returnId" type="String" mode="OUT" optional="true"/>
    </service>
    <service name="getPartySchemeEligibility" engine="java" location="in.vasista.vbiz.depotsales.DepotSalesServices" invoke="getPartySchemeEligibility" >
        <description>Create a new Depot Sales ReturnHeader</description>
        <attribute name="partyId" type="String" mode="IN" optional="false"/>
        <attribute name="schemesMap" type="Map" mode="OUT" optional="true"/>
    </service>
    
    <service name="createIssuanceForDepotOrder" engine="java" location="in.vasista.vbiz.depotsales.DepotSalesServices" invoke="createIssuanceForDepotOrder">
        <description>Issue Products to Order</description>
        <attribute name="orderId" type="String" mode="IN" optional="false"/>
        <attribute name="inventoryItemId" type="String" mode="IN" optional="true"/>
        <attribute name="shipmentId" type="String" mode="IN" optional="true"/>
        <attribute name="facilityId" type="String" mode="IN" optional="true"/>
        <attribute name="shipmentId" type="String" mode="OUT" optional="true"/>
        <attribute name="issuedDateTime" mode="IN" type="Timestamp"  optional="true"/>
    </service>
    <service name="realizeStatus" engine="java" location="in.vasista.vbiz.depotsales.DepotSalesServices" invoke="realizeStatus">
        <description>Issue Products to Order</description>
        <attribute name="paymentPreferenceId" type="List" mode="IN" optional="false"/>
        <attribute name="allStatus" type="List" mode="IN" optional="true"/>
        <attribute name="paymentStatus" type="List" mode="IN" optional="true"/>
    </service>

</services>

