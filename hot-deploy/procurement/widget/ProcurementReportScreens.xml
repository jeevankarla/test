    <screen name="orderAdjustmentsFoxproCsv">
        <section>
        	<actions>
        		<set field="headerItem" value="ProcurementEntry"/>
            	<set field="tabButtonItem" value="Reports" />
        		<set field="adjustmentType" from-field="parameters.adjustmentType" />
        		<script location="component://procurement/webapp/procurement/WEB-INF/actions/facility/PrepareAdjustmentsForFoxpro.groovy"/>
        	</actions>
            <widgets>
              <section>
                 <condition>
                 	<if-compare operator="equals" value="additions" field="adjustmentType"/> 
                 </condition>
                 <widgets>
                  	<include-form name="MpAdditionsFoxproCsv" location="component://procurement/widget/ProcurementForms.xml"/>
                 </widgets>
                 <fail-widgets>
                 	<include-form name="MpDeductionsFoxproCsv" location="component://procurement/widget/ProcurementForms.xml"/>
                 </fail-widgets>
              </section>
              	            	
           </widgets>
        </section>
    </screen>
