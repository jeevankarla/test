	<screen name="LeaveTypes">
		<section>
			<actions>
			<set field="tabButtonItem" value="LeaveTypes"/>
                <service service-name="humanResManagerPermission" result-map="permResult">
                    <field-map field-name="mainAction" value="REPORTS_VIEW"/>
                </service>
                <set field="hasReportsViewPermission" from-field="permResult.hasPermission"/>  
			</actions>
			<widgets>		
				<decorator-screen name="CommonHumanresReportsDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
                    	<section>
                    	    <condition>
                            	<if-compare field="hasReportsViewPermission" operator="equals" value="true" type="Boolean"/>
                            </condition>
                            <widgets>	
                            <link text="${uiLabelMap.LeaveTypeExportAsCsv}" style="button"
										target="LeaveTypeListCsv.csv">
									</link>
									<link text="${uiLabelMap.LeaveTypeExportAsPdf}" style="button"
										target="LeaveTypeListPdf.pdf">
									</link>													
								<screenlet title="${uiLabelMap.HumanResEmployeeLeaveTypes}">							
								<include-form name="LeaveTypes"
										location="component://humanres/widget/ReportHumanresSummaryForms.xml" />
								</screenlet>
							</widgets>
		                    <fail-widgets>
                                <label style="h3">${uiLabelMap.HumanResViewPermissionError}</label>                        			                    
		                    </fail-widgets>
		            	</section>								
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
