     <screen name="FindBenefitsOrDeductions">
        <section>
            <actions>
                <set field="titleProperty" value="HumanResFindEmployment"/>
                <set field="headerItem" value="benefitOrDeduction"/>
				<set field="tabButtonItem" value="benefitOrDeduction" />      
				<entity-condition list="allBenefitsTypeList" entity-name="BenefitType">
					<condition-expr field-name="benefitTypeId" operator="not-equals" value="PAYROL_BEN_SALARY"/>
					<order-by field-name="sequenceNum"/>
				</entity-condition>
				<entity-condition list="allDeductionTypeList" entity-name="DeductionType">
					<order-by field-name="sequenceNum"/>					
				</entity-condition>
				<script location="component://humanres/webapp/humanres/WEB-INF/actions/humanres/EmployeeBenefitsAndDeductions.groovy" />  
            </actions>
            <widgets>
				<decorator-screen name="HumanresCommonDecorator" location="component://humanres/widget/CommonScreens.xml">
                    <decorator-section name="body">
                    	<section>
		                    <widgets>                       
		                        <decorator-screen name="FindScreenDecorator" location="component://common/widget/CommonScreens.xml">
		                            <decorator-section name="search-options">
		                                <include-form name="FindBenefitsOrDeductions" location="component://humanres/widget/forms/EmploymentForms.xml"/>
		                            </decorator-section>
		                            <decorator-section name="search-results">
		                               <section>
		                               		 <widgets>
				                                 <platform-specific>
				                                     <html><html-template location="component:///humanres/webapp/humanres/humanres/BenefitsOrDeductions.ftl"/></html>
				                                 </platform-specific>
				                             </widgets>
		                               </section>
		                            </decorator-section>
		                        </decorator-screen>
		                    </widgets>                    
                              		                   
		            	</section>				                        
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
 <screen name="newReports">
