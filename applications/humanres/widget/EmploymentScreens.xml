<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    <screen name="FindEmployments">
        <section>
            <actions>
                <set field="titleProperty" value="HumanResFindEmployment"/>
                <set field="headerItem" value="FindEmployments"/>
				<set field="tabButtonItem" value="FindEmployments" />                
                <set field="roleTypeIdFrom" from-field="parameters.roleTypeIdFrom"/>
                <set field="roleTypeIdTo" from-field="parameters.roleTypeIdTo"/>
                <set field="partyIdFrom" from-field="parameters.partyIdFrom"/>
                <set field="partyIdTo" from-field="parameters.partyIdTo"/>
                <set field="fromDate" from-field="parameters.fromDate"/>
                <set field="employmentCtx" from-field="parameters"/>
                <service service-name="humanResManagerPermission" result-map="permResult">
                    <field-map field-name="mainAction" value="EMPLOYMENT_VIEW"/>
                </service>
                <set field="hasEmploymentViewPermission" from-field="permResult.hasPermission"/>                  
            </actions>
            <widgets>
				<decorator-screen name="HumanresCommonDecorator"
					location="component://humanres/widget/CommonScreens.xml">
                    <decorator-section name="body">
                    	<section>
                    	    <condition>
                            	<if-compare field="hasEmploymentViewPermission" operator="equals" value="true" type="Boolean"/>
                            </condition>
		                    <widgets>                       
		                        <decorator-screen name="FindScreenDecorator" location="component://common/widget/CommonScreens.xml">
		                            <decorator-section name="menu-bar">
		                                <section>
		                                    <condition>
		                                		<if-service-permission service-name="humanResManagerPermission" main-action="EMPLOYMENT_EDIT"/>
		                                	</condition>                        
		                                    <widgets>
		                                        <container style="button-bar">
		                                            <link target="EditEmployment" text="${uiLabelMap.HumanResNewEmployment}" style="buttontext create"/>
		                                        </container>
		                                    </widgets>
		                                </section>
		                            </decorator-section>
		                            <decorator-section name="search-options">
		                                <include-form name="FindEmployments" location="component://humanres/widget/forms/EmploymentForms.xml"/>
		                            </decorator-section>
		                            <decorator-section name="search-results">
		                                <include-form name="ListEmploymentsPerson" location="component://humanres/widget/forms/EmploymentForms.xml"/>
		                            </decorator-section>
		                        </decorator-screen>
		                    </widgets>		
		                    <fail-widgets>
                                <label style="h3">${uiLabelMap.HumanResViewPermissionError}</label>                        			                    
		                    </fail-widgets>
		            	</section>				                        
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="EditEmployment">
        <section>
            <actions>
                <set field="titleProperty" value="HumanResEditEmployment"/>
                <set field="headerItem" value="FindEmployments"/>
                <set field="tabButtonItem" value="FindEmployments"/>
                <set field="fromDate" from-field="parameters.fromDate" type="Timestamp"/>
                <entity-one entity-name="Employment" value-field="employment"/>
                <service service-name="humanResManagerPermission" result-map="permResult">
                    <field-map field-name="mainAction" value="EMPLOYMENT_EDIT"/>
                </service>
                <set field="hasEmplEditPermission" from-field="permResult.hasPermission"/>   
                <service service-name="humanResManagerPermission" result-map="permResult">
                    <field-map field-name="mainAction" value="EMPLOYMENT_VIEW"/>
                </service>
                <set field="hasEmploymentViewPermission" from-field="permResult.hasPermission"/>                                                
            </actions>
            <widgets>
                <decorator-screen name="HumanresCommonDecorator"
					location="component://humanres/widget/CommonScreens.xml">
                    <decorator-section name="body">
                    	<section>
                    	    <condition>
                            	<if-compare field="hasEmploymentViewPermission" operator="equals" value="true" type="Boolean"/>
                            </condition>
		                    <widgets>   
		                    	<screenlet title="ListEmployment">
		                    	<include-form name="ListEmployment" location="component://humanres/widget/forms/EmploymentForms.xml"/>
		                        </screenlet>                     
		                        <screenlet title="${uiLabelMap.HumanResEditEmployment}">
		                            <include-form name="EditEmployment" location="component://humanres/widget/forms/EmploymentForms.xml"/>
		                        </screenlet>
		                        
		                    </widgets>		
		                    <fail-widgets>
                                <label style="h3">${uiLabelMap.HumanResViewPermissionError}</label>                        			                    
		                    </fail-widgets>
		            	</section>			                        
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="ListEmployments">
