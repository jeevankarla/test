    					<platform-specific><html><html-template location="component://humanres/webapp/humanres/humanres/Reports.ftl"></html-template></html></platform-specific>
    					</widgets>
    				</section>
    			</decorator-section>    		
    		</decorator-screen>
    		</widgets>
    	</section>
    </screen>
</screens>