        <field name="salaryStepSeqId" tooltip="${uiLabelMap.CommonRequired}" required-field="true" title="Salary Step"><lookup target-form-name="LookupSalaryStep" size="20"/></field>
        <field name="fromDate" tooltip="${uiLabelMap.CommonRequired}" required-field="true"><date-time type="date"/></field>
