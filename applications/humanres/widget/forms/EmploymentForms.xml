            </entity-one>
            <set field="amount" from-field="Amounts.amount"/>
        </row-actions>
        <!-- <auto-fields-service service-name="updatePayHistory"/> -->
        <field name="roleTypeIdFrom"><hidden/></field>
        <field name="roleTypeIdTo"><hidden/></field>
        <field name="partyIdFrom"><hidden/></field>
        <field name="partyIdTo"><hidden/></field>
        <field name="payScale"><display/></field>
        <field name="amount" ><display/></field>
        <field name="comments"><hidden/></field>
        <field name="tenantId"><hidden/></field>
        <field name="thruDate" use-when="!hasEmplEditPermission" title="Thru Date"><display/></field>  
        <field name="payGradeId"  title="${uiLabelMap.HumanResPayGradeID}"><display/></field>        
        <field name="salaryStepSeqId"  title="${uiLabelMap.HumanResSalaryStepSeqId}"><display/></field>
        <field name="fromDate"><display description="${groovy:org.ofbiz.base.util.UtilDateTime.toDateString(fromDate, &quot;dd-MM-yyyy&quot;);}"></display> </field>
        <field name="thruDate" use-when="hasEmplEditPermission"><date-time  type="date"/></field>              
        <field name="submitButton" use-when="hasEmplEditPermission" title="${uiLabelMap.CommonUpdate}"><submit button-type="button"/></field>
        <field name="deleteLink" use-when="hasEmplEditPermission" title=" " widget-style="buttontext">
            <hyperlink target="deletePayHistory" description="${uiLabelMap.CommonDelete}">
                <parameter param-name="roleTypeIdFrom"/>
                <parameter param-name="roleTypeIdTo"/>
                <parameter param-name="partyIdFrom"/>
                <parameter param-name="partyIdTo"/>
                <parameter param-name="fromDate"/>
            </hyperlink>
        </field>
        <field name="periodTypeId"><hidden/></field>
        <sort-order>
        <sort-field name="payScale"/>
        <sort-field name="amount"/>
        <sort-field name="payGradeId"/>
        <sort-field name="salaryStepSeqId"/>
        	<sort-field name="fromDate"/>
        	<sort-field name="thruDate"/>
        	
        	
        	
        	
        	<sort-field name="submitButton"/>
        	<sort-field name="deleteLink"/>
        </sort-order>
    </form>
