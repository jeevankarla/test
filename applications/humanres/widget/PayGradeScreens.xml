<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    <screen name="FindPayGrades">
        <section>
            <actions>
                <set field="titleProperty" value="HumanResFindPayGrade"/>
                <set field="headerItem" value="GlobalHRSettingMenus"/>
                <set field="tabButtonItem" value="PayGrade"/>
                <set field="payGradeId" from-field="parameters.payGradeId"/>
                <set field="payGradeCtx" from-field="parameters"/>
                <service service-name="humanResManagerPermission" result-map="permResult">
                    <field-map field-name="mainAction" value="GLOBALHR_EDIT"/>
                </service>
                <set field="hasGlobalHREditPermission" from-field="permResult.hasPermission"/>   
                <service service-name="humanResManagerPermission" result-map="permResult">
                    <field-map field-name="mainAction" value="GLOBALHR_VIEW"/>
                </service>
                <set field="hasGlobalHRViewPermission" from-field="permResult.hasPermission"/>                                                 
            </actions>
            <widgets>
                <decorator-screen name="GlobalHRSettingsDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<section>
                    	    <condition>
                            	<if-compare field="hasGlobalHRViewPermission" operator="equals" value="true" type="Boolean"/>
                            </condition>
                            <widgets>                      
		                        <decorator-screen name="FindScreenDecorator" location="component://common/widget/CommonScreens.xml">
		                            <decorator-section name="menu-bar">
		                                <section>
		                               		<condition>
		                            			<if-compare field="hasGlobalHREditPermission" operator="equals" value="true" type="Boolean"/>
		                                	</condition>                                
		                                    <widgets>
		                                        <container style="button-bar">
		                                            <link target="EditPayGrade" text="${uiLabelMap.HumanResNewPayGrade}" style="buttontext create"/>
		                                        </container>
		                                    </widgets>
		                                </section>
		                            </decorator-section>
		                            <decorator-section name="search-options">
		                                <include-form name="FindPayGrades" location="component://humanres/widget/forms/PayGradeForms.xml"/>
		                            </decorator-section>
		                            <decorator-section name="search-results">
		                                <include-form name="ListPayGrades" location="component://humanres/widget/forms/PayGradeForms.xml"/>
		                            </decorator-section>
		                        </decorator-screen>
		                    </widgets>		
		                    <fail-widgets>
                                <label style="h3">${uiLabelMap.HumanResViewPermissionError}</label>                        			                    
		                    </fail-widgets>
		            	</section>				                        
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="EditPayGrade">
        <section>
            <actions>
                <set field="titleProperty" value="HumanResEditPayGrade"/>
                <set field="tabButtonItem" value="PayGrade"/>
                <set field="subTabButtonItem" value="EditPayGrade"/>
                <set field="payGradeId" from-field="parameters.payGradeId"/>
                <entity-one entity-name="PayGrade" value-field="payGrade"/>
                <service service-name="humanResManagerPermission" result-map="permResult">
                    <field-map field-name="mainAction" value="GLOBALHR_EDIT"/>
                </service>
                <set field="hasGlobalHREditPermission" from-field="permResult.hasPermission"/>         
                <service service-name="humanResManagerPermission" result-map="permResult">
                    <field-map field-name="mainAction" value="GLOBALHR_VIEW"/>
                </service>
                <set field="hasGlobalHRViewPermission" from-field="permResult.hasPermission"/>                            
            </actions>
            <widgets>
                <decorator-screen name="GlobalHRSettingsDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<section>
                    	    <condition>
                            	<if-compare field="hasGlobalHRViewPermission" operator="equals" value="true" type="Boolean"/>
                            </condition>
                            <widgets>                     
		                        <section>
		                            <condition>
		                                <not><if-empty field="parameters.payGradeId"/></not>
		                            </condition>
		                            <widgets>
		                                <include-menu name="SalaryBar" location="component://humanres/widget/HumanresMenus.xml"/>
		                            </widgets>
		                        </section>
		                        <screenlet title="${uiLabelMap.HumanResViewPayGrade} [${payGradeId}]">
		                            <section>
		                               	<condition>
		                            		<if-compare field="hasGlobalHREditPermission" operator="equals" value="true" type="Boolean"/>
		                                </condition>                            
		                                <widgets>
		                                    <include-form name="EditPayGrade" location="component://humanres/widget/forms/PayGradeForms.xml"/>
		                                </widgets>
		                                <fail-widgets>
		                                    <include-form name="EditPayGradeReadOnly" location="component://humanres/widget/forms/PayGradeForms.xml"/>                                
		                                </fail-widgets>
		                            </section>
		                        </screenlet>
		                    </widgets>		
		                    <fail-widgets>
                                <label style="h3">${uiLabelMap.HumanResViewPermissionError}</label>                        			                    
		                    </fail-widgets>
		            	</section>		                        
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="EditSalarySteps">
        <section>
            <actions>
                <set field="titleProperty" value="HumanResEditSalaryStep"/>
                <set field="headerItem" value="PayGrade"/>
                <set field="tabButtonItem" value="EditSalaryStep"/>
                <set field="payGradeId" from-field="parameters.payGradeId"/>
                <set field="salaryStepSeqId" from-field="parameters.salaryStepSeqId"/>
                <service service-name="humanResManagerPermission" result-map="permResult">
                    <field-map field-name="mainAction" value="GLOBALHR_EDIT"/>
                </service>
                <set field="hasGlobalHREditPermission" from-field="permResult.hasPermission"/>  
                <service service-name="humanResManagerPermission" result-map="permResult">
                    <field-map field-name="mainAction" value="GLOBALHR_VIEW"/>
                </service>
                <set field="hasGlobalHRViewPermission" from-field="permResult.hasPermission"/>                                    
            </actions>
            <widgets>
                <decorator-screen name="GlobalHRSettingsDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<section>
                    	    <condition>
                            	<if-compare field="hasGlobalHRViewPermission" operator="equals" value="true" type="Boolean"/>
                            </condition>
                            <widgets>                       
		                        <section>
		                            <condition>
		                                <not><if-empty field="parameters.payGradeId"/></not>
		                            </condition>
		                            <widgets>
		                                <include-menu name="SalaryBar" location="component://humanres/widget/HumanresMenus.xml"/>
		                            </widgets>
		                        </section>
		                    	<section>
		                        	<condition>
		                            	<if-compare field="hasGlobalHREditPermission" operator="equals" value="true" type="Boolean"/>
		                            </condition>   
		                            <widgets>                     
		                        		<screenlet id="AddSalaryStepPanel" title="${uiLabelMap.HumanResAddSalaryStep} [${payGradeId}]" collapsible="true">
		                            		<include-form name="AddSalaryStep" location="component://humanres/widget/forms/PayGradeForms.xml"/>
		                        		</screenlet>
		                        		<screenlet>
		                        			<include-form name="ListSalarySteps" location="component://humanres/widget/forms/PayGradeForms.xml"/>
										</screenlet>
									</widgets>
									<fail-widgets>
		                        		<include-form name="ListSalaryStepsReadOnly" location="component://humanres/widget/forms/PayGradeForms.xml"/>							
									</fail-widgets>
								</section>
		                    </widgets>		
		                    <fail-widgets>
                                <label style="h3">${uiLabelMap.HumanResViewPermissionError}</label>                        			                    
		                    </fail-widgets>
		            	</section>									
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>