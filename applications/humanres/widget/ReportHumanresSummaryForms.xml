		<field name="name" title-area-style="tableheadwide">
			<display description="${firstName} ${middleName} ${lastName}" />
		</field>		
		<field name="employementFrom" title-area-style="tableheadwide"><display description="${fromDate}"/></field>
		<field name="employeePosition" title-area-style="tableheadwide"><display description="${employeePosition}"/></field>
		<field name="phoneNumber" title-area-style="tableheadwide"><display description="${phoneNumber}"/></field>
		<field name="emailAddress" title-area-style="tableheadwide"><display description="${emailAddress}"/></field>
		<field name="postalAddress" title-area-style="tableheadwide"><display description="${postalAddress}"/></field>
	</form>


