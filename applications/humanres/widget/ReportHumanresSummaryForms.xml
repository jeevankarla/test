    <form name="EmployeePositionTypes" type="list" list-name="revenueAccountBalanceList"
        odd-row-style="alternate-row" default-table-style="basic-table hover-bar">
        <actions>           
              <entity-condition entity-name="EmplPositionType" filter-by-date="false" list="revenueAccountBalanceList">
                
                <select-field field-name="emplPositionTypeId"/>
