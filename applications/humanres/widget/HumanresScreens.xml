            </actions>            
            <widgets>
            	<platform-specific> 
                	<html><html-template location="component://humanres/webapp/humanres/humanres/salaryAnalysisInternal.ftl"/></html>
                </platform-specific>   
            </widgets>
        </section>
    </screen>      
</screens>