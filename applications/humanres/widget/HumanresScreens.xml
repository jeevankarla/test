	 <screen name="SalaryAnalysisChart">
        <section>
            <actions>
                <set field="titleProperty" value="Analytics"/>
                <set field="tabButtonItem" value="analytics"/>
 				<set field="tabButtonItem2" value="salaryAnalysisChart" />                                           
                <set field="headerItem" value="charts"/>
